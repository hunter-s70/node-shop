<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (products.length) { %>
        <ul>
            <% products.forEach(item => { %>
                <li>
                    <p><% item.title %> (<% item.cartItem.quantity %>)</p>
                    <a href="/delete-cart-item/<%= item.id %>"
                       class="btn">Delete</a>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <h1>No products in Cart!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>